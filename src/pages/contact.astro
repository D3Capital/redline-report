---
import Layout from "../layouts/Layout.astro";

const siteName = "Redline Report";
const contactEmail = "research.redline@outlook.com";
---

<Layout title="Contact" siteName={siteName}>
  <main style="max-width: 960px; margin: 0 auto; padding: 48px 16px;">
    <h1 style="font-size: 40px; margin: 0 0 14px 0; color: #111827;">
      Contact
    </h1>

    <p style="margin: 0 0 18px 0; color: #374151; max-width: 720px; line-height: 1.6;">
      For research-related correspondence, factual corrections, or confidential
      disclosures relevant to our coverage, please contact:
    </p>

    <p style="margin: 0; color: #374151;">
      <strong>Email:</strong>{" "}
      <a
        href={`mailto:${contactEmail}`}
        style="color: #111827; text-decoration: underline;"
      >
        {contactEmail}
      </a>
    </p>
  </main>
</Layout>