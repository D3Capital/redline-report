---
const siteName = "Redline Report";
const tagline =
  "Independent short-biased research focused on corporate governance and disclosure risk.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
  </head>
  <body style="font-family: ui-sans-serif, system-ui; margin: 0; line-height: 1.5;">
    <section class="hero">
       <img src="/images/hero.png" alt="Redline Report" />
       <div class="hero-overlay">
          <h1>Redline Report</h1>
          <p>Independent Research on Corporate Risk and Market Integrity</p>
          <a
             href="/research"
             style="
              margin-top: 16px;
             display: inline-block;
             width: fit-content;          /* ← 新增 */
             max-width: 240px;             /* ← 新增 */
             padding: 10px 18px;
             background: rgba(255,255,255,0.9);
             color: #111;
             font-weight: 600;
             border-radius: 6px;
             text-decoration: none;
             "
             >
           View Research
        </a>
      </div>
   </section>

    <!-- Top nav -->
    <header style="border-bottom: 1px solid #e5e7eb;">
      <nav
        style="
          max-width: 960px;
          margin: 0 auto;
          padding: 16px;
          display: flex;
          justify-content: flex-end;
          align-items: center;
          gap: 16px;
        "
      >
        
        <div style="display: flex; gap: 14px; flex-wrap: wrap;">
          <a href="/research" style="text-decoration: none; color: #111827;">Research</a>
          <a href="/methodology" style="text-decoration: none; color: #111827;">Methodology</a>
          <a href="/disclosures" style="text-decoration: none; color: #111827;">Disclosures</a>
          <a href="/contact" style="text-decoration: none; color: #111827;">Contact</a>
        </div>
      </nav>
    </header>

    <!-- Footer -->
    <footer style="border-top: 1px solid #e5e7eb;">
      <div style="max-width: 960px; margin: 0 auto; padding: 16px; color: #6b7280; font-size: 13px;">
        <div>
          © {new Date().getFullYear()} {siteName}. All content is provided for informational purposes only and does not constitute investment advice.
        </div>
      </div>
    </footer>
  </body>
<style>
  .hero {
    position: relative;
    width: 100%;
    height: 68vh;              /* 头图高度：可后续再调 */
    min-height: 420px;
    max-height: 720px;
    overflow: hidden;
    background: #0b0d10;       /* 图片没加载时的底色 */
  }

  .hero img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;         /* 关键：铺满且不变形 */
    object-position: center;
    filter: saturate(0.9) contrast(1.05);
    transform: scale(1.02);    /* 防止边缘白缝 */
  }

  .hero::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.55),
      rgba(0, 0, 0, 0.45) 35%,
      rgba(0, 0, 0, 0.65)
    );
    pointer-events: none;
  }

  .hero-overlay {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;   /* 垂直居中 */
    gap: 12px;
    padding: 0 24px;
    max-width: 980px;
    margin: 0 auto;
    color: #fff;
  }

  .hero-overlay h1 {
    margin: 0;
    font-size: clamp(36px, 5vw, 64px);
    letter-spacing: -0.02em;
    line-height: 1.05;
  }

  .hero-overlay p {
    margin: 0;
    font-size: clamp(14px, 1.6vw, 18px);
    line-height: 1.5;
    max-width: 56ch;
    opacity: 0.92;
  }
</style>
</html>