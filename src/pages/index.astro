---
import Layout from "../layouts/Layout.astro";
const siteName = "Redline Report";
---

<Layout title="" fullBleed={true}>
  <section class="hero">
    <img src="/images/hero.png" alt={siteName} />
    <div class="hero-overlay">
      <h1>{siteName}</h1>
      <p>Independent Research on Corporate Risk and Market Integrity</p>
      <a
        href="/research"
        style="
          margin-top: 16px;
          display: inline-block;
          width: fit-content;
          max-width: 240px;
          padding: 10px 18px;
          background: rgba(255,255,255,0.9);
          color: #111;
          font-weight: 600;
          border-radius: 6px;
          text-decoration: none;
        "
      >
        View Research
      </a>
    </div>
  </section>

  <style>
    .hero {
      position: relative;
      width: 100%;
      height: 68vh;
      min-height: 420px;
      max-height: 720px;
      overflow: hidden;
      background: #0b0d10;
    }

    .hero img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      filter: saturate(0.9) contrast(1.05);
      transform: scale(1.02);
    }

    .hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.55),
        rgba(0, 0, 0, 0.45) 35%,
        rgba(0, 0, 0, 0.65)
      );
      pointer-events: none;
    }

    .hero-overlay {
      position: relative;
      z-index: 1;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 12px;
      padding: 0 24px;
      max-width: 980px;
      margin: 0 auto;
      color: #fff;
    }

